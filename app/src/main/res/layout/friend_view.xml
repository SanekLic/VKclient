<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/friendCardView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="3dp"
        app:cardBackgroundColor="@color/friendPhotoBackColor"
        app:cardCornerRadius="32dp">

        <ImageView
            android:id="@+id/friendPhotoView"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/friendNameView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:textSize="18sp"
        tools:text="TextView" />

    <ImageView
        android:id="@+id/onlineStatusImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingTop="1dp"
        app:srcCompat="@android:drawable/presence_offline" />

    <TextView
        android:id="@+id/onlineStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="12sp"
        tools:text="(offline)" />

</LinearLayout>