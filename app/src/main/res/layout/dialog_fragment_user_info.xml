<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp">


        <TextView
            android:id="@+id/userStatusLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/status_label"
            android:textColor="@color/colorUserInfoIcon" />

        <TextView
            android:id="@+id/userStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="статус" />

        <TextView
            android:id="@+id/userHomeTownLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/home_town_label"
            android:textColor="@color/colorUserInfoIcon" />

        <TextView
            android:id="@+id/userHomeTownTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="город" />

        <TextView
            android:id="@+id/userEducationLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/education_label"
            android:textColor="@color/colorUserInfoIcon" />

        <TextView
            android:id="@+id/userUniversityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="вуз" />

        <TextView
            android:id="@+id/userFacultyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorUserInfoIcon"
            tools:text="факультет" />

        <TextView
            android:id="@+id/userInterestsLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/interests_label"
            android:textColor="@color/colorUserInfoIcon" />

        <TextView
            android:id="@+id/userInterestsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="интересы" />

        <TextView
            android:id="@+id/userMusicLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/music_label"
            android:textColor="@color/colorUserInfoIcon" />

        <TextView
            android:id="@+id/userMusicTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="музыка" />

        <TextView
            android:id="@+id/userMovieLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/movie_label"
            android:textColor="@color/colorUserInfoIcon" />

        <TextView
            android:id="@+id/userMovieTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="фильмы" />

        <TextView
            android:id="@+id/userGamesLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/games_label"
            android:textColor="@color/colorUserInfoIcon" />

        <TextView
            android:id="@+id/userGamesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="игры" />

        <TextView
            android:id="@+id/userAboutLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/about_label"
            android:textColor="@color/colorUserInfoIcon" />

        <TextView
            android:id="@+id/userAboutTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="о себе" />

    </LinearLayout>
</ScrollView>